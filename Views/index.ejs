<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Index da Aplicação com mongo do raryson</title>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.1.1.min.js"></script>
  </head>
  <body>
    <h1>Teste de renderização</h1>
    <form class="" action="/" method="post">
      <label for="nome">Nome:</label><textarea name="nome" rows="1" cols="80"></textarea>
      <label for="idade">Idade:</label><textarea name="idade" rows="1" cols="80"></textarea>
      <input type="submit" id="submit" value="Vai">

    </form>
    <h3>Select do banco</h3>
    <ul>
      <% listao.forEach(function(item) { %>
          <li>Numero: <%= item.numero %> -Nome: <%= item.nome %> - Idade: <%= item.idade %> <button  id="remover" onclick ="vai()">Remover</button></li>
      <% }); %>
    </ul>

    <script>

        function vai(){
          console.log('foi')
          $.post('/remover')
           .done((retorno) => $('#resposta').html(retorno))
           .fail((error) => $('#resposta').html(error))}

    </script>
  </body>
</html>
